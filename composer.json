{
    "name": "geo6/batch-geocoder",
    "type": "project",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Jonathan BeliÃ«n",
            "email": "jbe@geo6.be"
        }
    ],
    "require": {
        "php": "^7.2",
        "geo6/php-text-tools": "1.0.0",
        "php-http/guzzle6-adapter": "1.1.1",
        "php-http/message": "1.6.0",
        "zendframework/zend-component-installer": "2.1.1",
        "zendframework/zend-config": "3.2.0",
        "zendframework/zend-config-aggregator": "1.1.1",
        "zendframework/zend-db": "2.9.3",
        "zendframework/zend-diactoros": "1.7.1",
        "zendframework/zend-expressive": "3.0.2",
        "zendframework/zend-expressive-fastroute": "3.0.1",
        "zendframework/zend-expressive-flash": "1.0.0",
        "zendframework/zend-expressive-helpers": "5.0.0",
        "zendframework/zend-expressive-platesrenderer": "2.0.0",
        "zendframework/zend-expressive-session": "1.0.0",
        "zendframework/zend-expressive-session-ext": "1.1.1",
        "zendframework/zend-filter": "2.8.0",
        "zendframework/zend-i18n": "2.9.0",
        "zendframework/zend-servicemanager": "3.3.2",
        "zendframework/zend-validator": "2.10.2"
    },
    "require-dev": {
        "filp/whoops": "2.1.14",
        "squizlabs/php_codesniffer": "3.2.3",
        "zfcampus/zf-development-mode": "3.2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "@development-disable",
            "@init:directory",
            "@init:sql",
            "@gettext:mo",
            "npm install",
            "npm run build"
        ],
        "post-update-cmd": [
            "@gettext:mo",
            "npm update",
            "npm run build"
        ],
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "clear-config-cache": "php bin/clear-config-cache.php",
        "clear-database": "php bin/clear-database.php*",
        "clear-uploaded-files": "sudo -u www-data php bin/clear-uploaded-files.php*",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ -d display_errors=1",
        "gettext": [
            "@gettext:po:fr",
            "@gettext:po:nl"
        ],
        "gettext:mo": [
            "@gettext:mo:fr",
            "@gettext:mo:nl"
        ],
        "gettext:po:fr": "mkdir -p data/locale/fr && find templates/ -iname \"*.phtml\" | xargs xgettext --from-code=utf-8 --no-location --sort-by-file --join-existing --keyword=translate --keyword=translatePlural:1,2 --language=PHP --output-dir=data/locale/fr",
        "gettext:po:nl": "mkdir -p data/locale/nl && find templates/ -iname \"*.phtml\" | xargs xgettext --from-code=utf-8 --no-location --sort-by-file --join-existing --keyword=translate --keyword=translatePlural:1,2 --language=PHP --output-dir=data/locale/nl",
        "gettext:mo:fr": "msgfmt -c -o data/locale/fr/messages.mo data/locale/fr/messages.po",
        "gettext:mo:nl": "msgfmt -c -o data/locale/nl/messages.mo data/locale/nl/messages.po",
        "init:directory": [
            "mkdir -p data/cache",
            "mkdir -p data/upload",
            "chmod -R 0777 data/*"
        ],
        "init:sql": [
            "sudo -u postgres createuser --pwprompt geocode",
            "sudo -u postgres psql -f scripts/create-database.sql",
            "sudo -u postgres psql -f scripts/create-extension.sql geocode",
            "sudo -u postgres psql -f scripts/create-validation-bpost.sql geocode"
        ],
        "git:pull": [
            "git fetch --all",
            "git reset --hard origin/master",
            "git pull origin master"
        ]
    }
}
